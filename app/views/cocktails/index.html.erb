<div class="container">
 <div class="titre">
        <h1>All cocktails</h1>
      </div>
    <div class="d-flex flex-wrap cards">

          <% @cocktails.each do |cocktail| %>

          <div class="card-category d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
              <%= link_to cocktail.name, cocktail_path(cocktail.id) %>

              <div class="remove">
              <%= link_to "Remove",
                                cocktail_path(cocktail),
                                method: :delete,
                                data: { confirm: "Are you sure?"} %>
              </div>
            </div>
          <% end %>


    </div>
    <%= link_to "Add a new cocktail", "#", class: "btn btn-ghost" %>
</div>
